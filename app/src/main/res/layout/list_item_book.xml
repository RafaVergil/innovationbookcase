<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_book_height">

    <ImageView
        android:id="@+id/imgCover"
        android:transitionName="@string/transaction_book_cover"
        android:src="@drawable/ic_book"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_toRightOf="@+id/imgCover"
        android:layout_above="@+id/txtCategories"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitle"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Title of the Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtSubtitle"
        android:maxLines="2"
        android:textSize="16sp"
        android:text="The Cool Subtitle of the Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtAuthors"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="BOOK, Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtCategories"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imgCover"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="Fantasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>